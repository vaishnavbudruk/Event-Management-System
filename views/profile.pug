extends index.pug


block style 
    style
      include ../static/style.css
      include ../static/styleProfile.css

block content 
    div.container
        h1 Profile
        form(action="/profile",method="post",class="myForm")
            div.box
                <i class="fa fa-user"></i> 
                input(type="text",class="myInput",name="name",placeholder=" Enter your name")
            div.box
                <i class="fa fa-list-ol"></i>
                input(type="text",class="myInput",name="desc",placeholder="Registration Number")
            div.box
                <i class="fa fa-phone"></i>
                input(type="phone",class="myInput",name="phone",placeholder="Enter your Phone no.")
            div.box
                <i class="fa fa-envelope"></i>
                input(type="email",class="myInput",name="email",placeholder="Enter your Email ID")
            button.BTN 
                | Submit