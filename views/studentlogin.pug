extends index.pug

block style 
    style
      include ../static/style.css
      include ../static/styleProfile.css

block content 
    div.container
        h1 Student Login
        form(action="/studentlogin",method="post",class="myForm")
            div.box
                <i class="fa fa-user"></i> 
                input(type="name",class="myInput",name="name",placeholder=" Enter your name")
            div.box
                <i class="fa fa-pass"></i>
                input(type="passwd",class="myInput",name="passwd",placeholder="Password")
            button.BTN 
                | Submit
            
        form(method='get', action='/orglogin')
            button.BTN 
                | Login as Organizer